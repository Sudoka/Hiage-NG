<?xml version="1.0" encoding="utf-8"?>
<object id="mario">
    <sprites default="small">
        <sprite id="small">mario-small</sprite>
        <sprite id="big">mario-big</sprite>
    </sprites>
    
    <friction friction="100" />
    
    <playercontroller />

    <transform />
    <gravity />
    <motion />

    <statemachine default="stand">
        <state id="stand" />
        <state id="walk" runspeed="150" />
        <state id="run" runspeed="150" />
        <state id="inair" />
    </statemachine>

    <speedlimit maxspeed="200" />
    <collisionresponse />
    <physicalobjectcollisionresponse />

    <mariointerface />

    <collidable default="small-standing">
        <polygon id="small-standing">
            <vertex x="-7" y="9" />
            <vertex x="7" y="9" />
            <vertex x="7" y="-9" />
            <vertex x="-7" y="-9" />
        </polygon>
        <polygon id="big-standing">
            <vertex x="-8" y="13" />
            <vertex x="8" y="13" />
            <vertex x="8" y="-13" />
            <vertex x="-8" y="-13" />
        </polygon>
        <!--<polygon id="small-crouching">
            <vertex x="-7" y="9" />
            <vertex x="7" y="9" />
            <vertex x="7" y="-9" />
            <vertex x="-7" y="-9" />
        </polygon>-->
    </collidable>
</object>
