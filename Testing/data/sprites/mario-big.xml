<?xml version="1.0" encoding="utf-8"?>
<sprite id="mario-big">
  <texture>mario-big</texture>

  <defaults>
    <frame-width>16</frame-width>
    <frame-height>28</frame-height>
    <animation>stand</animation>
  </defaults>

  <animation>
    <name>stand</name>
    <frame x="3" y="3" delay="1" next="0" />
  </animation>

  <animation>
    <name>walk</name>
    <frame x="3" y="3" delay="0.5" next="1" />
    <frame x="22" y="3" delay="0.5" next="2" />
    <frame x="3" y="3" delay="0.5" next="3" />
    <frame x="42" y="3" delay="0.5" next="0" />
  </animation>

  <animation>
    <name>run</name>
    <frame x="181" y="3" delay="0.5" next="1" w="18" />
    <frame x="201" y="3" delay="0.5" next="2" w="18" />
    <frame x="181" y="3" delay="0.5" next="3" w="18" />
    <frame x="221" y="3" delay="0.5" next="0" w="18" />
  </animation>

  <animation>
    <name>jump</name>
    <frame x="62" y="0" delay="1" next="0" h="31" />
  </animation>

  <animation>
    <name>fall</name>
    <frame x="82" y="2" delay="1" next="0" h="29" />
  </animation>

  <animation>
    <name>brake</name>
    <frame x="162" y="2" delay="1" next="0" h="29" />
  </animation>

