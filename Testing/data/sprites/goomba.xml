<?xml version="1.0" encoding="utf-8"?>
<sprite id="goomba">
  <texture>goomba</texture>

  <defaults>
    <frame-width>16</frame-width>
    <frame-height>20</frame-height>
  </defaults>

  <animation>
    <name>stand</name>
    <frame x="5" y="3" delay="0.2" next="1" />
    <frame x="31" y="3" delay="0.2" next="2" />
    <frame x="57" y="3" delay="0.2" next="3" />
    <frame x="83" y="3" delay="0.2" next="0" />
  </animation>

  <animation>
    <name>walk</name>
    <frame x="135" y="3" delay="0.2" next="1" w="17" />
    <frame x="160" y="4" delay="0.2" next="2" w="18" h="19" />
    <frame x="185" y="5" delay="0.2" next="3" w="20" h="18" />
    <frame x="212" y="4" delay="0.2" next="4" w="18" h="19"/>
    <frame x="238" y="3" delay="0.2" next="0" w="18"/>
  </animation>

  <animation>
    <name>jump</name>
    <frame x="109" y="3" delay="1" next="0" />
  </animation>

  <animation>
    <name>fall</name>
    <frame x="109" y="3" delay="1" next="0" />
  </animation>

  <animation>
    <name>die</name>
    <frame x="3" y="27" delay="0.2" next="1" w="20" />
    <frame x="27" y="27" delay="0.2" next="2" w="24"/>
    <frame x="53" y="27" delay="0.2" next="3" w="25"/>
    <frame x="79" y="27" delay="0.2" next="4" w="24"/>
    <frame x="104" y="27" delay="0.2" next="4" w="26"/>

  </animation>
</sprite>
